generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ========================
// ðŸ“š Modelo de GÃªneros
// ========================
model Genre {
  id    String  @id @default(uuid())
  name  String  @unique
  books Book[]
}

// ========================
// ðŸ“Œ Status de Leitura
// ========================
enum ReadingStatus {
  QUERO_LER
  LENDO
  LIDO
  PAUSADO
  ABANDONADO
}

// ========================
// ðŸ“– Modelo de Livro
// ========================
model Book {
  id          String         @id @default(uuid())
  title       String
  author      String
  pages       Int?
  cover       String?
  status      ReadingStatus  @default(QUERO_LER)
  genre       Genre?         @relation(fields: [genreId], references: [id])
  genreId     String?
  year        Int?
  rating      Int?
  synopsis    String?
  currentPage Int?
  isbn        String?
  notes       String?
  createdAt   DateTime       @default(now())
}
