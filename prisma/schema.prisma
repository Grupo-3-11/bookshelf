// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Mudei para path direto para simplificar
}

// ========================
// ðŸ“š Modelo de GÃªneros
// ========================
model Genre {
  id    String  @id @default(cuid())  // Mudei uuid() para cuid() - mais compatÃ­vel
  name  String  @unique
  books Book[]
  
  @@map("genres")
}

// ========================
// ðŸ“– Modelo de Livro
// ========================
model Book {
  id          String   @id @default(cuid())  // Mudei para cuid()
  title       String
  author      String
  pages       Int?
  cover       String?
  status      String   @default("QUERO_LER")  // MUDEI: enum â†’ String
  genre       Genre?   @relation(fields: [genreId], references: [id])
  genreId     String?
  year        Int?
  rating      Int?     @default(0)
  synopsis    String?
  currentPage Int?     @default(0)
  isbn        String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt  // ADICIONEI: campo para tracking de updates
  
  @@map("books")
}